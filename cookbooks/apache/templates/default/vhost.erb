<VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	ServerAlias <%= @domain %>
	DocumentRoot "<%= @document_root %>"

	<Directory "<%= @document_root %>">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Require all granted
		Order allow,deny
		allow from all
	</Directory>

</VirtualHost>
		
